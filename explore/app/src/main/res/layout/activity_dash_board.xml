<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_langit"
    tools:context=".DashBoard">



    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bottom_navigation"
        app:itemBackground="@color/bg_screen3"
        app:itemTextColor="@drawable/selector"
        app:itemIconTint="@drawable/selector"
        app:menu="@menu/menu_navigation"
        android:layout_alignParentBottom="true"
        />

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/bottom_navigation"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="11dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="11dp"
        android:layout_marginBottom="1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:onClick="menutab1"
                android:id="@+id/pantai"
                android:layout_width="300dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:src="@drawable/gg_pantai"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/dot_dark_screen1"
                android:textSize="12dp"
                android:padding="1dp"
                android:layout_margin="2dp"
                android:textStyle="bold" />

            <ImageView
                android:onClick="menutab2"
                android:id="@+id/kota"
                android:layout_width="300dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:src="@drawable/gg_kota"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/dot_dark_screen1"
                android:textSize="12dp"
                android:padding="1dp"
                android:layout_margin="2dp"
                android:textStyle="bold" />

            <ImageView
                android:onClick="menutab3"
                android:id="@+id/alam"
                android:layout_width="300dp"
                android:layout_height="150dp"
                android:src="@drawable/gg_alam"
                android:layout_gravity="center"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/dot_dark_screen1"
                android:textSize="12dp"
                android:padding="1dp"
                android:layout_margin="2dp"
                android:textStyle="bold" />


            <ImageView
                android:onClick="menutab4"
                android:id="@+id/gunung"
                android:layout_width="300dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:src="@drawable/gg_gunung"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"/>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/dot_dark_screen1"
                android:textSize="12dp"
                android:padding="1dp"
                android:layout_margin="2dp"
                android:textStyle="bold" />



        </LinearLayout>


    </ScrollView>


</RelativeLayout>